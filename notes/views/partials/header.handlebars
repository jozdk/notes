<header>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container-fluid">
            <div class="d-flex">
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="nav-item nav-link" href="/">
                    <i class="bi-house"></i>
                </a>
            </div>
            
            {{#if user}}
            <a class="nav-item nav-link" href='/notes/add'>Add a Note</a>
            {{/if}}

            <div class="collapse navbar-collapse" id="navbarContent">
                <div class="navbar-nav me-auto mb-2 mb-lg-0">
                    {{#if breadcrumb}}
                    <a class="nav-item nav-link" href='{{breadcrumb.url}}'>
                        {{breadcrumb.title}}
                    </a>
                    {{/if}}
                </div>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </form>
                {{#if user}}
                <div class="nav-item nav-link mb-2 mb-lg-0">
                    <a href="/users/logout" class="btn btn-dark col-auto">Logout <span class="badge badge-light">{{ user.username }}</span></a>
                </div>
                {{else}}
                <div class="nav-item nav-link mb-2 mb-lg-0">
                    <a href="/users/login" class="btn btn-dark col-auto">Login</a>
                </div>
                {{/if}}

            </div>
        </div>




    </nav>
</header>