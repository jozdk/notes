<form method="POST" action="/notes/save">
    <input type="hidden" name="docreate" value="{{#if docreate}}create{{else}}update{{/if}}">
    <p>
        Key:
        {{#if docreate}}
        <input type="text" name="notekey" value="">
        {{else}}
        {{#if notekey}}{{notekey}}{{/if}}
        <input type="hidden" name="notekey" value="{{#if notekey}}{{notekey}}{{/if}}">
        {{/if}}
    </p>
    <p>
        Title:
        <input type="text" name="title" value="{{#if notetitle}}{{notetitle}}{{/if}}">
    </p>
    <textarea name="body" id="" cols="40" rows="5">{{#if notebody}}{{notebody}}{{/if}}</textarea>
    <input type="submit" value="Submit">
</form>